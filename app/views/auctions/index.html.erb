<center>
    <h1>List of auctions</h1>
</center>


<style>
.demo-card-square.mdl-card {
        width: 300px;
        height: 500px;
        margin: auto;
}

.a {
  color: black
}

.demo-card-square > .mdl-card__title {
        color: #fff;
        background: bottom right 10% no-repeat #383838;
}
.johny {
  text-align: right;
}

.title {
  padding-bottom: 40px
  color: black;
}


.search {
  text-align: center;
  width: 100%;
  margin: auto;
}
body {
  background: url("http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/footer_lodyas.png");
  font-family: 'Montserrat Alternates', sans-serif;
}
.pagination {
  padding-left: 10px;
  margin-left: 10px;
}
</style>
<body>
<div class="search">
<p>
  <%= search_form_for @q do |f| %>

  <%= f.search_field :name_cont %>
  <%= f.submit %>
  <% end %>
</p>
</div>
<% @auction.each do |auction| %>
<div class="demo-card-square mdl-card mdl-shadow--2dp">
  <% if auction.imageUrl.blank? %>
  <img src="http://www.xarchitekten.at/img/start/xstart.gif">
  <% else %>
  <img src="<%= auction.imageUrl %>">
  <% end %>
  <div class="mdl-card__title mdl-card--expand">
    <div class="title">
    <h2 class="mdl-card__title-text"><%= auction.name%></h2>
  </div>
  </div>
  <div class="mdl-card__supporting-text">
    <%= auction.content %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <div class="johny">

      <% if current_user and current_user.has_role? :admin %>
      <%= link_to 'Destroy', auction_path(auction), method: :delete, data: { confirm: 'Are you sure?'} %>
      <%= link_to 'Read more', auction_path(auction) %>
      <% else %>
      <div clas ='read-more'>
      <%= link_to 'Read more', auction_path(auction) %>
    </div>
      <% end %>
    </a>
  </div>
  </div>
</div>
<br>
<% end %>
<div clas="paginate">
<%= paginate @auction %>
</div>

<%  if current_user and current_user.has_role? :admin    %>
<%= link_to 'auctions/new' do %>
<div style="text-align:center; padding-top: 50px;">
    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">
        Add new item to bid
    </button>
</div>
<% end %>
<% end %>
</body>
