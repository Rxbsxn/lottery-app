<style>
 body {
   background: url("http://subtlepatterns2015.subtlepatterns.netdna-cdn.com/patterns/footer_lodyas.png");
   font-family: 'Montserrat Alternates', sans-serif;
   margin-left: auto;


 }
 .body-builder {
   margin: auto;
   padding-left: 40%;
 }
</style>
<body>
<div class="body-builder">

<h1>Create new auction</h1>
<%= form_for @auction do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :imageUrl %><br>
    <%= f.text_area :imageUrl %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
</body>
